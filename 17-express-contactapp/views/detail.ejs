<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1 class="mb-4">Details Contact</h1>
      <% if (!contact) { %>
      <div class="alert alert-danger" role="alert">
        Data Contact Tidak ada!!
        <a href="/contact" class="alert-link">kembali ke halaman contact</a>.
      </div>
      <% } else {%>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">
            <%= contact.nohp %>
          </h6>
          <p class="card-text"><%= contact.email %></p>
          <a href="/contact" class="card-link">Kembali ke daftar kontak</a>
        </div>
      </div>

      <%}%>
    </div>
  </div>
</div>
